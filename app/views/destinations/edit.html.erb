<h1>Edit the destination</h1>

<%= render "errors/flash_errors" %>
<%= form_for @destination do |f| %>
  <%= f.text_field :city %>
  <%= f.text_field :city %>
  <%= f.collection_select :airline_id, @airlines, :id, :name %>
<% end %>

<% form_tag destination_path(@destination), method: :delete do %>
  <%= submit_tag "Delete this destination" %>
<% end %>
